pipeline {
    agent any
    tools {
        maven 'MAVEN_HOME'
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
            post {
                success {
                    echo 'now archeiving....'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }
    }
}

