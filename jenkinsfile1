        //        stage ('Deploy to Staging'){
        //            steps {
        //                bat "winscp -i /home/jenkins/tomcat-demo.pem **/target/*.war ec2-user@${params.tomcat_dev}:/var/lib/tomcat8/webapps"
        //            }
        //        }

         //       stage ("Deploy to Production"){
         //           steps {
         //               bat "winscp -i /home/jenkins/tomcat-demo.pem **/target/*.war ec2-user@${params.tomcat_dev}:/var/lib/tomcat8/webapps"
         //           }
         //       }
         //   }
        }
    }
}

