pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh'''
                echo "PATH = ${PATH}"
                echo "M2_HOME = ${M2_HOME}"
                '''
                sh 'mvn clean package'
            }
            post {
                success {
                    echo 'now archeiving....'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }
    }
}

