pipeline {
    agent any
    stages{
        stage('Build'){
            steps {
                def mvn_version = 'apache-maven-3.5.3'
                withEnv( ['PATH+MAVEN_HOME=${tool mvn_version}/bin'] ) {
                sh 'mvn clean package'
            }
            post {
                success {
                    echo 'Now Archiving...'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }
    }
}

